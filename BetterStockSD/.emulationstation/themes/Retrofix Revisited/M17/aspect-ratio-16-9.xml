         <logoSize>0.1 0.1</logoSize><!-- 192 108 -->
         <maxLogoCount>7</maxLogoCount>
      </carousel>
      <image name="system-marker" extra="true">
         <pos>0 0.5</pos><!-- 0 540 -->
         <size>0.239583333333333 0.166666666666667</size><!-- 460 180 -->
      </image>
      <image name="system-view-overlay" extra="true">
         <path>./_inc/images/system-view-overlay-16-9.png</path>
      </image>
      <image name="system-view-art" extra="true">
         <pos>0.229166666666667 0</pos><!-- 440 0 -->
         <size>0 1</size>
      </image>
   </view>

</theme>